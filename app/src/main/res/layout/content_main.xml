<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_reguler"
                        android:text="Pendapatan BPJS:" />

                    <TextView
                        android:id="@+id/pendapatan_bpjs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_reguler"
                        android:text="Rp. 0"
                        android:textColor="@color/primary"
                        android:textSize="30dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_reguler"
                        android:text="Pendapatan Umum:" />

                    <TextView
                        android:id="@+id/pendapatan_umum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_reguler"
                        android:text="Rp. 0"
                        android:textColor="@color/primary"
                        android:textSize="30dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_reguler"
                        android:text="Total pendapatan :" />

                    <TextView
                        android:id="@+id/pendapatan_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_reguler"
                        android:text="Rp. 0"
                        android:textColor="@color/primary"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/date_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="0dp"
                        android:fontFamily="@font/roboto_reguler"
                        android:text="Tanggal update : 20 Juli 2018"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/email_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_reguler"
                        android:gravity="center"
                        android:text="Dokter : Dr. Abet"
                        android:textColor="@color/secondary_text"
                        android:textSize="10dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/btn_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_detail"
                android:fontFamily="@font/roboto_medium"
                android:text="detail"
                android:textColor="@android:color/white" />

            <com.victor.loading.newton.NewtonCradleLoading
                android:id="@+id/newton_cradle_loading"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:visibility="gone" />

            <include layout="@layout/list_detail" />


        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>