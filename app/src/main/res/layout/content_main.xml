<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/nav_header_vertical_spacing"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="0dp">

                <Button
                    android:id="@+id/btnfilter"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_filterlist"
                    android:text="hide"
                    android:textColor="#00ffffff" />


                <TextView
                    android:id="@+id/text_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="2dp"
                    android:text="Filter "
                    android:textSize="15sp" />

            </LinearLayout>


            <include layout="@layout/filter" />

            <LinearLayout
                android:id="@+id/ln_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/liner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_text">


                        <TextView
                            android:id="@+id/judul"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_reguler"
                            android:text="Data Pendapatan :"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/txtumum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin_text"
                            android:fontFamily="@font/roboto_reguler"
                            android:text="Jumlah pendapatan Umum:"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/pendapatan_umum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin_text"
                            android:fontFamily="@font/roboto_reguler"
                            android:text="Rp. 0"
                            android:textColor="#00bcd4"
                            android:textSize="20dp" />

                        <ProgressBar
                            android:id="@+id/progress_bar3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/txtbpjs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/roboto_reguler"
                            android:text="Jumlah pendapatan BPJS :"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/pendapatan_bpjs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin_text"
                            android:fontFamily="@font/roboto_reguler"
                            android:text="Rp. 0"
                            android:textColor="#00bcd4"
                            android:textSize="20dp" />

                        <ProgressBar
                            android:id="@+id/progress_bar2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin_text"
                            android:fontFamily="@font/roboto_reguler"
                            android:text="Total pendapatan :"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/pendapatan_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="0dp"
                            android:layout_marginTop="@dimen/margin_text"
                            android:fontFamily="@font/roboto_reguler"
                            android:text="Rp. 0"
                            android:textColor="@color/primary"
                            android:textSize="30dp" />

                        <ProgressBar
                            android:id="@+id/progress_bar1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/email_d"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:layout_marginTop="@dimen/margin_text"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text=""
                            android:textColor="@color/secondary_text"
                            android:textSize="14sp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <Button
                    android:id="@+id/btn_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_text"
                    android:background="@drawable/btn_detail"
                    android:fontFamily="@font/roboto_medium"
                    android:text=""
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />

                <com.victor.loading.newton.NewtonCradleLoading
                    android:id="@+id/newton_cradle_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <include layout="@layout/list_detail" />
            </LinearLayout>

        </LinearLayout>

</ScrollView>
</android.support.constraint.ConstraintLayout>