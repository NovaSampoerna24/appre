<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swiperefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v4.widget.NestedScrollView
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/k_foto"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="center"
                android:src="@drawable/bg"
                tools:background="#e0e0e0" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:layout_margin="5dp"
                android:src="@drawable/dokterdefault"
                app:civ_border_color="#FFF"
                app:civ_border_width="2dp"
                app:civ_fill_color="@color/icons" />

            <TextView
                android:id="@+id/txt_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/dimens_10dp"
                android:background="@drawable/btn_style"
                android:fontFamily="@font/roboto_medium"
                android:padding="5dp"
                tools:text="Dokter Abet"
                android:textColor="@color/icons" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="#e0e0e0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="4dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/dimens_10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/card_style"
                        android:orientation="vertical"
                        android:padding="@dimen/dimens_10dp">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="78dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Bulan ini"
                            android:textColor="@color/icons"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/total_gaji"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/textView4"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/roboto_reguler"
                            android:text="Rp 0.0"
                            android:textColor="@color/icons"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/txt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Pendapatan"
                            android:textColor="@color/icons"
                            android:textSize="24sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:orientation="horizontal"
                            android:padding="@dimen/dimens_5dp"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="Pendapatan Bpjs"
                                    android:textColor="@color/icons"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/gajiBpjs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="Rp 0.0"
                                    android:textColor="@color/icons"
                                    android:textSize="14sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="Pendapatan Umum"
                                    android:textColor="@color/icons"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/gajiumum"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_reguler"
                                    android:text="Rp 0.0"
                                    android:textColor="@color/icons"
                                    android:textSize="14sp" />
                            </LinearLayout>

                        </LinearLayout>







                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimens_10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Informasi:" />

            <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/recycle"-->
            <!--android:layout_marginTop="@dimen/margin_text"-->
            <!--android:layout_width="match_parent"-->
            <!--tools:listitem="@layout/item_informasi"-->
            <!--android:layout_height="wrap_content"/>-->
            <include layout="@layout/item_informasi" />

            <include layout="@layout/item_informasi" />

            <include layout="@layout/item_informasi" />

            <include layout="@layout/item_informasi" />

            <include layout="@layout/item_informasi" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
</android.support.v4.widget.SwipeRefreshLayout>