<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary"
        android:orientation="vertical"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/activity_vertical_margin">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/logo" />

                <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:text="Remunerasi RSUD RAA Soewondo Pati"-->
                <!--android:textAlignment="center"-->
                <!--android:textColor="@color/primary_text" />-->

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:fontFamily="@font/roboto_medium"-->
                    <!--android:text="Masukkan E-mail"-->
                    <!--android:textColor="@color/accent" />-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/icons"
                    android:padding="@dimen/dimens_10dp">

                    <EditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:hint="E-mail"
                        android:inputType="textEmailAddress"/>


                </android.support.design.widget.TextInputLayout>

                <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:fontFamily="@font/roboto_medium"-->
                    <!--android:text="Masukkan Username"-->
                    <!--android:textColor="@color/accent" />-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/icons"
                    android:padding="@dimen/dimens_10dp">
                    <EditText
                        android:id="@+id/edt_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:hint="Username"
                        android:inputType="text" />

                </android.support.design.widget.TextInputLayout>

                <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:fontFamily="@font/roboto_medium"-->
                    <!--android:text="Masukkan password"-->
                    <!--android:textColor="@color/accent" />-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/icons"
                    app:passwordToggleEnabled="true"
                    android:padding="@dimen/dimens_10dp">

                    <EditText
                        android:id="@+id/edt_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:hint="Password"
                        android:inputType="textPassword" />


                </android.support.design.widget.TextInputLayout>
                <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:fontFamily="@font/roboto_medium"-->
                    <!--android:text="Ulangi password"-->
                    <!--android:textColor="@color/accent" />-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/icons"
                    app:passwordToggleEnabled="true"
                    android:padding="@dimen/dimens_10dp">

                    <EditText
                        android:id="@+id/edt_password_ulang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:hint="Ulangi Password"
                        android:inputType="textPassword" />


                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="#303656"
                    android:text="Register"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:textColor="#FFFF" />

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#221d68"
                    android:text="Sudah punya akun ?"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>