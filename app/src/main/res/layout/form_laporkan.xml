<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/dialogNameEt"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:hint="Keterangan"
        android:inputType="textMultiLine|textCapSentences"
        android:lines="3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimens_5dp"
        android:gravity="center">
        <Button
            android:id="@+id/dialogLoginBtn"
            android:text="Laporkan"
            android:layout_margin="@dimen/dimens_5dp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:padding="@dimen/dimens_5dp"
            android:textAllCaps="false"
            android:background="@drawable/gradient_background4"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/dialogCancelBtn"
            android:layout_margin="@dimen/dimens_5dp"
            android:text="Batal"
            android:padding="0dp"
            android:textAllCaps="false"
            android:background="@drawable/gradient_background3"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>